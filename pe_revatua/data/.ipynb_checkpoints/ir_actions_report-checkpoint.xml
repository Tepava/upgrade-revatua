        <!-- Ajout impression Connaissement -->
        <record id="revatua_connaissement_report" model="ir.actions.report">
            <field name="name">Connaissement</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">pe_revatua.revatua_connaissement</field>
            <field name="print_report_name">'Connaissement - %s - %s' % (object.sale_id.name,object.name.replace('/','-'))</field>
