        </record> 
        
        <!-- Impression Facture Globale -->
        <record id="revatua_adm_report" model="ir.actions.report">
            <field name="name">Facture Generale ADM</field>
            <field name="model">account.move.adm</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">pe_revatua.revatua_admg</field>
            <field name="print_report_name">'%s' % object.name.replace('/','-')</field>
            <field name="binding_model_id" ref='pe_revatua.model_account_move_adm'/>
            
        </record>
</data></odoo>